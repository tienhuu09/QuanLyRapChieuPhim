<UserControl x:Class="Tien_C2_B1.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tien_C2_B1">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Hour:" VerticalAlignment="Center"/>
        <ComboBox x:Name="hoursComboBox" Width="50" Height="25" Margin="0,0,5,0"/>
        <TextBlock Text="Minute:" VerticalAlignment="Center"/>
        <ComboBox x:Name="minutesComboBox" Width="50" Height="25" Margin="0,0,5,0"/>
    </StackPanel>
</UserControl>
